<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Explicit">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/drawable_explicit_txt</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">E</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">#F44336</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
    </style>

    <style name="ChipStyle">
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="chipIconTint">@color/textColor</item>
        <item name="chipStrokeColor">@color/textColor2</item>
    </style>

    <style name="EnterLinkMaterialDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/positiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeButtonStyle</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.AlertDialog</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="positiveButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>

    <style name="negativeButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>

    <style name="ShapeAppearance.Material3.AlertDialog" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="SortMaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.AlertDialog</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor2</item>
    </style>

</resources>