<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Explicit">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/drawable_explicit_txt</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">E</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">#F44336</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
    </style>

    <style name="ChipStyle">
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="chipIconTint">@color/textColor</item>
        <item name="chipStrokeColor">@color/textColor2</item>
    </style>

</resources>